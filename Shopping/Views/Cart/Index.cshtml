@using Shopping.Models.ViewModels
@model CartItemViewModel
<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description"></td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        <td class="total">Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CartItems.Count > 0)
                    {
                        @foreach (var item in Model.CartItems)
                        {

                            <tr>
                                <td class="cart_product">
                                    <a href=""><img src="~/images/@item.image" alt=""></a>
                                </td>
                                <td class="cart_description">
                                    <h4><a href="">@item.productName</a></h4>
                                </td>
                                <td class="cart_price">
                                    <p>$@item.price</p>
                                </td>
                                <td class="cart_quantity">
                                    <div class="cart_quantity_button">
                                        <a class="cart_quantity_up" asp-controller="Cart" asp-action="Increase" asp-route-id="@item.productId"> + </a>
                                        <input class="cart_quantity_input" type="text" name="quantity" value="@item.quantity" autocomplete="off" size="2">
                                        <a class="cart_quantity_down" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.productId"> - </a>
                                    </div>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">@Model.CartItems.Where(s => s.productId == item.productId).Sum(x => x.quantity * x.price).ToString()</p>
                                </td>
                                <td class="cart_delete">
                                    <a class="cart_quantity_delete" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.productId"><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="6">
                                Tổng tiền: @Model.totalAmount.ToString()
                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Clear"><i class="fa fa-times"></i>Clear</a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">
                                <h4>Giỏ hàng trống</h4>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>